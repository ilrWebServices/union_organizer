<div{{ attributes.addClass('component-info').setAttribute('style', 'margin-top: 1em')}}>
  {% if url %}
  <div class="component-info--label cu-heading">
  <a href="{{ url }}">{{ label }}</a>
  </div>
  {% else %}
  <h2 class="component-info--label cu-heading">
  {{ label }}
  </h2>
  {% endif %}

  {% if deprecations %}
  <div style="background: lightgray; padding: 0 1em;">
  <h3 class="cu-heading">{% trans %}Deprecated{% endtrans %}:</h3>
  <ul class="component-info--deprecated">
  {% for deprecation in deprecations %}
    <li>{{ deprecation.getDescription() }}</li>
  {% endfor %}
  </ul>
  </div>
  {% endif %}

  {% if css_category %}
  <p class="component-info--css-category">
    <code style="background: lightgray; border-radius: 5px; padding: .5em 1em; font-size: .6em;" title="CSS category">{{ css_category }}</code>
  </p>
  {% endif %}

  {% if description %}<div class="component-info--description">{{ description }}</div>{% endif %}

  {% if template_vars %}
  <details>
    <summary class="cu-heading">{% trans %}Variables{% endtrans %}</summary>
      <ul class="component-info--template-vars">
      {% for template_var in template_vars %}
        <li>
          <code><strong>{{ template_var.getVariableName() }}</strong> <em>{{ template_var.getType() }}</em></code><br />
          {{ template_var.getDescription() }}
        </li>
      {% endfor %}
      </ul>
  </details>
  {% endif %}

  {% if variations %}
  <details>
    <summary class="cu-heading">{% trans %}Variations{% endtrans %}</summary>
    <ul class="component-info--variations">
    {% for variation in variations %}
      <li>
        <code><strong>{{ variation.getClassName() }}</strong></code><br />
        {{ variation.getDescription() }}
      </li>
    {% endfor %}
    </ul>
  </details>
  {% endif %}

  {% if reference_links %}
  <details>
    <summary class="cu-heading">{% trans %}References{% endtrans %}</summary>
    <ul class="component-info--reference-links">
    {% for reference_link in reference_links %}
      <li><a href="{{ reference_link.getReference() }}" target="_blank">{{ reference_link.getDescription() }}</a></li>
    {% endfor %}
    </ul>
  </details>
  {% endif %}

  {% if todos %}
  <h3 class="cu-heading">{% trans %}Todos{% endtrans %}:</h3>
  <ul class="component-info--todos">
  {% for todo in todos %}
    <li>{{ todo.getDescription() }}</li>
  {% endfor %}
  </ul>
  {% endif %}
</div>
